<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0.5dp"
    android:orientation="vertical"
    tools:context="projects.eloy.zone.androidtestproject.MainActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/Plain_Text"
        android:layout_width="411dp"
        android:layout_height="100dp"
        android:layout_marginLeft="0.9dp"
        android:layout_marginTop="0.1dp"
        android:layout_marginRight="0.1dp"
        android:layout_weight="3"
        android:background="@android:color/background_dark"

        >


        <TextView
            android:id="@+id/textView_input_numbers"
            android:layout_width="353dp"
            android:layout_height="219dp"
            android:layout_marginTop="128dp"
            android:fontFamily="@font/aldrich"
            android:gravity="end"
            android:textColor="@android:color/white"
            android:textSize="42sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="228dp"
            android:layout_height="34dp"
            android:layout_marginBottom="284dp"
            android:background="@android:color/background_dark"
            android:fontFamily="@font/aldrich"
            android:gravity="end"


            android:textColor="@android:color/white"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="-36dp" />


    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/background_dark"
        android:backgroundTint="@android:color/background_dark"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_clear"
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:layout_marginLeft="0.9dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounded_shape"
            android:text="AC"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_parentheses"
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounded_shape"
            android:text="( )"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounded_shape"
            android:text="%"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_division"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.1dp"
            android:layout_weight="1"
            android:background="@drawable/round_orange"
            android:text="\u00F7"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/background_dark">

        <Button
            android:id="@+id/button_seven"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="0.9dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounde_gray"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_eight"
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounde_gray"
            android:text="8"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_nine"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounde_gray"
            android:text="9"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_multiplication"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.1dp"
            android:layout_weight="1"
            android:background="@drawable/round_orange"
            android:text="x"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_four"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="0.9dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounde_gray"
            android:text="4"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_five"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounde_gray"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_six"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounde_gray"
            android:text="6"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_subtraction"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.1dp"
            android:layout_weight="1"
            android:background="@drawable/round_orange"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/background_dark"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_one"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="0.9dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounde_gray"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_two"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounde_gray"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_weight="1"
            android:background="@drawable/rounde_gray"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_addition"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.1dp"
            android:layout_weight="1"
            android:background="@drawable/round_orange"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/background_dark"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_zero"
            android:layout_width="14dp"
            android:layout_height="62dp"
            android:layout_marginLeft="0.9dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_marginBottom="0.1dp"
            android:layout_weight="2"
            android:background="@drawable/rounde_gray"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.4mm"
            android:layout_marginBottom="0.1dp"
            android:layout_weight="1"
            android:background="@drawable/rounde_gray"
            android:text="."
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.1dp"
            android:layout_marginBottom="0.1dp"
            android:layout_weight="1"
            android:background="@drawable/round_orange"
            android:text="="
            android:textColor="@android:color/white"
            android:textSize="40sp" />

    </LinearLayout>


</LinearLayout>
